    <script>
        // Script para calcular autom√°ticamente
        document.addEventListener('DOMContentLoaded', function() {
            const radios = document.querySelectorAll('input[type="radio"]');
            const totalSpan = document.getElementById('total-estudiantes');
            const presentesSpan = document.getElementById('presentes-estimados');
            
            // Inicializar contadores
            let total = document.querySelectorAll('.student-item').length;
            let presentes = Math.floor(total * 0.85); // Estimado inicial 85%
            
            totalSpan.textContent = total;
            presentesSpan.textContent = presentes;
            
            // Actualizar cuando cambian las selecciones
            radios.forEach(radio => {
                radio.addEventListener('change', function() {
                    // Aqu√≠ podr√≠as agregar l√≥gica para recalcular
                    console.log('Asistencia actualizada');
                });
            });
        });
    </script>
